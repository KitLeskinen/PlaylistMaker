<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mainMenuButtonTextSize</item>
        <item name="cornerRadius">@dimen/mainMenuCornerRadius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding</item>
        <item name="iconSize">@dimen/iconSize</item>
        <item name="iconTint">@color/black</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settingsItem">
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">@dimen/settingsTextSize</item>
        <item name="android:text">@string/dark_mode</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>



    <style name="artistName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>



    <style name="trackName">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="trackTime">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#AEAFB4</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="trackForwardArrow" />

    <style name="divider"></style>

    <style name="searchErrorMessage">
        <item name="android:textSize">19sp</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="containedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>


</resources>
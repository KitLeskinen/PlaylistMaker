<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trackCover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            style="@style/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="Here Comes The Sun (Remastered..." />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                style="@style/artistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Beatles" />

            <ImageView
                style="@style/divider"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="4dp"
                android:src="@drawable/ellipse_divider" />

            <TextView
                android:id="@+id/trackTime"
                style="@style/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2:55" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/trackForwardArrow"
        style="@style/trackForwardArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/arrow_forward_icon" />

</LinearLayout>
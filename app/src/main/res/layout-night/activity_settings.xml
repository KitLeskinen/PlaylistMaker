<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_night"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:navigationIcon="@drawable/back_icon"
        app:navigationIconTint="@color/white"
        app:title="@string/Settings" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"

        style="@style/settingsItem"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:text="@string/dark_mode"
        android:thumbTintMode="screen" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/shareApp"

        style="@style/settingsItem"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:drawableEnd="@drawable/share_icon"
        android:text="@string/share_app" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mailToSupport"
        style="@style/settingsItem"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:drawableEnd="@drawable/support_icon"
        android:text="@string/write_to_support" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/userAgreement"
        style="@style/settingsItem"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:drawableEnd="@drawable/arrow_forward_icon"
        android:text="@string/user_agreement" />


</LinearLayout>